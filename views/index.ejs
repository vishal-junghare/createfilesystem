<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Document</title>
</head>
<body>

<div class="w-full min-h-screen bg-zinc-900 mt-4">
  <div class="form">
    <form action="/create" method="post" class="p-10 text-white'">
        <input class="block text-white px-5 py-2 bg-zinc-700 w-full rounded-lg outline-none" type="text" placeholder="Title goes here..." name="title"/>
      <textarea class="block  text-white px-5 py-2 bg-zinc-700 resize-none mt-3 w-full rounded-lg outline-none" placeholder="Write your tesk details here.." name="details"></textarea>
      <input type="submit" value="Save" class="bg-blue-600 mt-2  px-5 py-2 rounded-md text-white "/>
    </form>
  </div>
  <div class="cards p-8 flex gap-3 flex-wrap" >
    <% if(files.length > 0 ){ %>
      <% files.forEach(function(val){ %>
        <div class="task min-w-72   px-3 py-3 rounded-md bg-zinc-800">
          <!-- <h1 class="text-white">somthing task is gose on run</h1> -->
          <h1 class="text-white text-2xl tracking-tight "><%= val %></h1>
          <a href="/file/<%= val %>" class="text-blue-500 inline-block mt-3">Read More</a>
        </div>

    <% }) %>
      <% } else { %>

        <h3 class="text-zinc-500 ">No task yet</h3>
   <% } %>
    
  </div>
</div>


</body>
</html>